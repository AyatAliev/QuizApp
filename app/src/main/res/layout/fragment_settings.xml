<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.SettingsFragment">

    <TextView
        android:id="@+id/txt_settings_main"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tittle_margin_start"
        android:layout_marginTop="@dimen/tittle_margin_top"
        android:text="@string/settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorDark_purple"
        app:layout_constraintTop_toBottomOf="@+id/txt_settings_main" />

    <RelativeLayout
        android:id="@+id/relative_first"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_one">


        <TextView
            android:id="@+id/settings_share"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:background="?selectableItemBackground"
            android:gravity="center|start"
            android:text="@string/share_this_app"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_settings_size" />


        <ImageView
            android:id="@+id/settings_img_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_img_marginEnd"
            android:src="@drawable/ic_vector"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_second"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDark_purple"
        app:layout_constraintTop_toBottomOf="@+id/relative_first" />


    <RelativeLayout
        android:id="@+id/relative_second"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_second">


        <TextView
            android:id="@+id/settings_rate_us"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:background="?selectableItemBackground"
            android:gravity="center|start"
            android:text="@string/rate_us"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_settings_size" />


        <ImageView
            android:id="@+id/settings_img_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_img_marginEnd"
            android:src="@drawable/ic_vector"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_third"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDark_purple"
        app:layout_constraintTop_toBottomOf="@+id/relative_second" />

    <RelativeLayout
        android:id="@+id/relative_third"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_third">


        <TextView
            android:id="@+id/settings_leave_feedback"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/settingsTextStartPadding"
            android:background="?selectableItemBackground"
            android:gravity="center|start"
            android:text="@string/leave_feedback"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_settings_size" />


        <ImageView
            android:id="@+id/settings_img_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_img_marginEnd"
            android:src="@drawable/ic_vector" />

    </RelativeLayout>

    <View
        android:id="@+id/view_fourth"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDark_purple"
        app:layout_constraintTop_toBottomOf="@+id/relative_third" />


    <RelativeLayout
        android:id="@+id/relative_fourth"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/view_fourth">


        <TextView
            android:id="@+id/settings_clear_history"
            style="@style/DefaultTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/settingsTextStartPadding"
            android:background="?selectableItemBackground"
            android:gravity="center|start"
            android:text="@string/clear_history"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_settings_size" />


        <ImageView
            android:id="@+id/settings_img_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/settings_img_marginEnd"
            android:src="@drawable/ic_vector" />

    </RelativeLayout>

    <View
        android:id="@+id/view_fifth"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDark_purple"
        app:layout_constraintTop_toBottomOf="@+id/relative_fourth" />


    <TextView
        android:id="@+id/quiz_version"
        style="@style/DefaultTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:textColor="@color/gray_color_def"
        android:textSize="@dimen/middle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_fifth" />


</androidx.constraintlayout.widget.ConstraintLayout>